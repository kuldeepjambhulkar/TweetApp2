<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
    <title>Login</title>
</head>
<body>
    <!-- User sign up -->
    <div class="container" style="max-width: 600px;background: #ff9f00;border-radius: 25px;">
        <div class="row mt-5">
            <div class="col">
                <h2 class="mb-5 text-center">Login</h2>
                <form id="loginUserForm" style="margin-bottom: 2rem;">
        

                    <div class="row">
                        <label for="loginUsername"><b>Username : </b></label> <br>
                        <div  class="col">
                            <input class="form-control" type="text" name="" id="loginUsername"> <br>
                        </div>
                    </div>

                    <div class="row">
                        <label for="loginPassword"> <b>Passowrd : </b></label> <br>
                        <div  class="col">
                            <input class="form-control" type="text" name="" id="loginPassword"> <br> <br>
                        </div>
                    </div>


                    <div class="row">
                        <div  class="col">
                            <input class="form-control mb-3 btn btn-success" type="submit" value="Login">
                        </div>
                        <div  class="col">
                            <button class="form-control btn btn-primary" id="signupBtn" title="Don't have account? SignUp here!">SignUp</button>
                        </div>
                    </div>
                    <p id="errorMsg" style="display: none;">Please fill all required feild</p>
                </form>
            </div>
        </div>
    </div>

    <script>
        const formElement = document.querySelector('#loginUserForm');
        formElement.addEventListener('submit', async (e)=>{
            e.preventDefault();
            
            const username = document.querySelector('#loginUsername').value;
            const password = document.querySelector('#loginPassword').value;
            
            if(password && username){
                const result =  await fetch('/User/'+username, {
                    method: 'GET',
                    headers:{
                        "Content-Type": "application/json"
                    }
                }).then((res)=> {

                    if(res.status != 404){
                        localStorage.setItem('currentUsername', username);
                        window.location.href='/Tweets/'+username;
                    }else{
                        document.querySelector('#errorMsg').style.display = 'block';
                        document.querySelector('#errorMsg').textContent = 'Enter valid credentials';
                    }
                })                
            }else{
                document.querySelector('#errorMsg').style.display = 'block';
                setTimeout(function(){
                    document.querySelector('#errorMsg').style.display = 'none';
                }, 3000);
            }
        })

        const signupBtn = document.querySelector('#signupBtn');
        signupBtn.addEventListener('click', () => { window.location.href = '/signup' })

    </script>
</body>
</html>